<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration>
    <jdbc>
        <driver>com.mysql.cj.jdbc.Driver</driver>
        <url>jdbc:mysql://127.0.0.1:3306/test</url>
        <user>root</user>
        <password>admin123</password>
    </jdbc>
    <generator>
        <name>org.jooq.codegen.JavaGenerator</name>
        <!-- 代码生成器 -->
        <database>
            <name>org.jooq.meta.mysql.MySQLDatabase</name>
            <!--include和exclude用于控制为数据库中哪些表生成代码-->
            <includes>.*</includes>
            <excludes></excludes>
            <!--数据库名称-->
            <inputSchema>test</inputSchema>
        </database>

        <generate>
            <!--生成dao和pojo-->
            <pojos>true</pojos>
            <indexes>false</indexes>
            <tables>false</tables>
            <keys>false</keys>
            <jpaAnnotations>true</jpaAnnotations>
            <validationAnnotations>true</validationAnnotations>
            <springAnnotations>true</springAnnotations>
            <globalObjectReferences>false</globalObjectReferences>
            <globalCatalogReferences>false</globalCatalogReferences>
            <globalSchemaReferences>false</globalSchemaReferences>
            <!--把数据库时间类型映射到java 8时间类型-->
            <javaTimeTypes>true</javaTimeTypes>
        </generate>

        <target>
            <!--生成代码文件的包名及放置目录-->
            <packageName>com.generator</packageName>
            <directory>target/generated-sources/jooq-mysql</directory>
        </target>
    </generator>
</configuration>